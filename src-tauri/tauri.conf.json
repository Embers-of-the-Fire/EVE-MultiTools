{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "eve-multitools",
    "version": "0.1.0",
    "identifier": "org.eve-multitools.dev",
    "build": {
        "frontendDist": "../out",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "windows": [
            {
                "title": "EVE MultiTools",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/**/*", "$DATA/**/*"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "wix": {
                "language": ["en-US", "zh-CN"]
            }
        }
    }
}
